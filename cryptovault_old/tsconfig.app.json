{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": ["node", "hardhat", "mocha", "chai"]
  },
  "include": [
    "hardhat.config.ts", 
    "scripts/**/*.ts", 
    "contracts/**/*.ts", 
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}